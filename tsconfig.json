{
	"include": ["src/**/*"],
	"compilerOptions": {
		"target": "ES2018",
		"module": "Node16",
		"rootDir": "./src",
		"outDir": "./lib",
		"declaration": true,
		"sourceMap": false,
		"moduleResolution": "Node16",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	}
}
