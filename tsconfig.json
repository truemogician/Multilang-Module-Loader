{
	"include": ["src/**/*"],
	"compilerOptions": {
		"incremental": true,
		"target": "ES6",
		"module": "CommonJS",
		"rootDir": "./src",
		"outDir": "./dist",
		"declaration": true,
		"sourceMap": false,
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	}
}
